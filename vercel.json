{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "vite build --outDir dist",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
